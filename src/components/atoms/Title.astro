---
interface Props {
  text: string;
  size?: "sm" | "md" | "lg";
  weight?: "light" | "normal" | "bold";
  color?: "primary" | "secondary" | "dark";
  style?: "compressed" | "normal" | "expanded" | "progressive" | "none";
  className?: string;
  href?: string;
}
const {
  text,
  size = "md",
  weight = "normal",
  color = "dark",
  style = "normal",
  className,
  href,
} = Astro.props;
const sizes = {
  sm: "text-sm md:text-base",
  md: "text-base md:text-lg lg:text-xl",
  lg: "text-base md:text-lg md:text-xl lg:text-2xl",
};
const weights = {
  light: "font-light",
  normal: "font-normal",
  bold: "font-bold",
};
const colors = {
  primary: "text-primary",
  secondary: "text-secondary",
  dark: "text-dark",
};
const styles = {
  compressed: "leading-tight tracking-tight",
  normal: "leading-normal tracking-normal",
  expanded: "leading-relaxed tracking-wide",
  progressive:
    "leading-tight tracking-tight md:leading-normal md:tracking-normal lg:leading-relaxed lg:tracking-wide",
  none: "leading-none tracking-none",
};
const baseStyle = ``;
const conbinedStyles = `${baseStyle} ${sizes[size]} ${weights[weight]} ${colors[color]} ${className} ${styles[style]}`;
---

<h2 class={conbinedStyles}>
  {
    href ? (
      <a href={href} class="hover:underline">
        {text}
      </a>
    ) : (
      text
    )
  }
</h2>
